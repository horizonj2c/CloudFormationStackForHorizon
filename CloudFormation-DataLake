Resources:
  #Bucket1 Data lake
  HorizonBucket1Datalake:
    Type: AWS::S3::Bucket
    Properties:
      BucketName: horizonbucket1datalake 
  #Bucket 2 Data Lake
  HorizonBucket2Datalake:
    Type: AWS::S3::Bucket
    Properties:
      BucketName: horizonbucket2datalake
  HorizonKinesis:  
    Type: AWS::KinesisFirehose::DeliveryStream
    Properties: 
      DeliveryStreamType: DirectPut
      #KinesisStreamSourceConfiguration: 
        #KinesisStreamARN:
        #RoleARN:
      ExtendedS3DestinationConfiguration:
        BucketARN: arn:aws:s3:::horizonbucket2datalake
        BufferingHints:
          IntervalInSeconds: 60
          SizeInMBs: 50
        CompressionFormat: UNCOMPRESSED
        RoleARN: arn:aws:iam::028500465483:role/KinesisAccessS3
