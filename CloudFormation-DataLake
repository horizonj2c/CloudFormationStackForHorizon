AWSTemplateFormatVersion: 2010-09-09
Resources:
  #Bucket1 Data lake
  HorizonBucket1Datalake:
    Type: AWS::S3::Bucket
    Properties:
      BucketName: horizonbucket1datalake 
  #Bucket 2 Data Lake
  HorizonBucket2Datalake:
    Type: AWS::S3::Bucket
    Properties:
      BucketName: horizonbucket2datalake
  KinesisRole:
    Type: AWS::IAM::Role
    Properties:
      AssumeRolePolicyDocument:
        Version: '2012-10-17'
        Statement:
        - Effect: Allow
          Principal:
            Service:
            - firehose.amazonaws.com
          Action:
          - sts:AssumeRole
      Path: "/"
      Policies:
        - PolicyName: KinesisRolePolicy
          PolicyDocument:
            Version: '2012-10-17'
            Statement:
            - Effect: Allow
              Action:
                - s3:AbortMultipartUpload
                - s3:GetBucketLocation
                - s3:GetObject
                - s3:ListBucket
                - s3:ListBucketMultipartUploads
                - s3:PutObject
              Resource:
                - Fn::GetAtt: [ HorizonBucket2Datalake , Arn ]
                - Fn::Join:
                  - ""
                  - - Fn::GetAtt: [ HorizonBucket2Datalake , Arn ]
                    - "/*"  
  EventFirehose:
    Type: AWS::KinesisFirehose::DeliveryStream
    DependsOn: KinesisRole
    Properties:
      S3DestinationConfiguration:
        BucketARN:
          Fn::GetAtt: [ HorizonBucket2Datalake, Arn ]
        BufferingHints:
          IntervalInSeconds: 60
          SizeInMBs: 10
        CompressionFormat: UNCOMPRESSED
        Prefix: events/
        RoleARN:
          Fn::GetAtt: [ KinesisRole, Arn ]
flows:
  firehose.endpoint: https://eu-west-1.console.aws.amazon.com/firehose/home?region=eu-west-1#/details/jenkinsstack-DataLake-EventFirehose-JKASPKL3VF5V
-filePattern: "/tmp/app.log*"
  deliveryStream: EventFirehose
 
